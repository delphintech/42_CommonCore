{
	"name": "transcendance",
	"version": "1.0.0",
	"main": "./src/app.js",
	"type": "module",
	"scripts": {
		"seed": "node seed/seed.js",
		"build:tailwind-config": "esbuild tailwind.config.ts --platform=node --outfile=tailwind.config.js",
		"tailwind": "rm -rf tailwind.config.js && npm run build:tailwind-config && tailwindcss -c tailwind.config.js -o ./assets/output.css --watch",
		"front": "rm -rf dist && esbuild src/front/*.ts src/front/**/*.ts --bundle  --platform=browser --outdir=dist --format=esm",
		"dev:front": "rm -rf dist && esbuild src/front/*.ts src/front/**/*.ts --bundle --platform=browser --outdir=dist --format=esm --watch",
		"dev": "concurrently \"npm run dev:front\" \"nodemon src/app.js\"",
		"start": "npm run front && node ./src/app.js"
	},
	"dependencies": {
		"@fastify/cookie": "^7.4.0",
		"@fastify/multipart": "^7.7.3",
		"@fastify/static": "^7.0.4",
		"bcrypt": "^6.0.0",
		"cloudinary": "^2.6.1",
		"dotenv": "^16.5.0",
		"fastify-socket.io": "^5.1.0",
		"fastify-sqlite": "^1.1.0",
		"jsonwebtoken": "^9.0.2",
		"otplib": "^12.0.1",
		"qrcode": "^1.5.4",
		"resend": "^4.6.0",
		"prom-client": "^15.1.3",
		"sequelize": "^6.37.7",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"twilio": "^5.7.3",
		"underscore": "^1.13.7",
		"@faker-js/faker": "^9.8.0",
		"esbuild": "^0.25.4",
		"typescript": "^5.8.3",
		"tailwindcss": "^3.4.17",
		"@types/node": "^22.15.17",
		"autoprefixer": "^10.4.21",
		"@socket.io/admin-ui": "^0.5.1"
	},
	"devDependencies": {
		"concurrently": "^9.1.2",
		"nodemon": "^3.1.10"
	}
}
